from PIL import Image
import os
import sys
import math
import logging
import logging.handlers
from colors import DYELLOW, RESET, YELLOW, DGREEN, DMAGENTA, BLUE, ICYAN

logging.basicConfig(level=logging.INFO, format='%(levelname)-8s %(message)s')
logger = logging.getLogger(__name__)


class Compress_Size:

    def __init__(self, input_image_path):
        self.input_image_path = input_image_path

    def resize_image(self, target_size):
        ext = input_image_path[-3:]
        output_image_path = os.path.splitext(input_image_path)[0] + f"_resized.{ext}"

        original_image = Image.open(input_image_path)
        original_size = original_image.size
        size = os.path.getsize(input_image_path)
        print(f"Original image size {YELLOW}{size/1_048_575:.2f}MiB{RESET}")

        # Calculate the aspect ratio of the original image
        aspect_ratio = original_size[0] / original_size[1]

        # Convert the target sixze to bytes
        tz = int(target_size[:-2])
        if target_size[-2:].lower() == 'mb':
            target_size_bytes = tz * 1024 * 1024

        elif target_size[-2:].lower() == 'kb':
            target_size_bytes = tz * 1024

        else:
            logger.warning(f"Invalid units. Please use either {DMAGENTA}'MB'{RESET}\
    or {DMAGENTA}'KB'{RESET}")

        # compare size for ratio choice purpose
        if (target_size[-2:].lower() == 'mb') and (tz > math.ceil((size/1024 * 1024))):
            islanger = 'True'
            return islanger
        elif (target_size[-2:].lower() == 'kb') and (tz > math.ceil((size/1024))):
            islanger = 'False'
            return islanger
        elif (target_size[-2:].lower() == 'mb') and (tz > math.ceil(size/1048575)) or (target_size[-2:].lower() == 'kb') and (tz > math.ceil((size/1024))):
            print(f"{ICYAN}Target size == Original size{RESET}")
            logger.info(f"{tz}<->{math.ceil(size/1048575)}\nExit ..")
            sys.exit()
        # Calculate the new dimensions based on the target size
        new_width, new_height = Compress_Size.calculate_new_dimensions(original_size, aspect_ratio, target_size_bytes, islanger)
        print(F"{BLUE}Processing ..{RESET}")
        resized_image = original_image.resize((new_width, new_height))
        resized_image.save(output_image_path, optimize=True, format = png')
        t_size = os.path.getsize(output_image_path)/1000_000
        print(F"{DGREEN}Ok{RESET}")
        print(f"Image resized to {DYELLOW}{t_size:.2f}mibs{RESET} and saved to {DYELLOW}{output_image_path}")

    @staticmethod
    def calculate_new_dimensions(original_size, aspect_ratio, target_size_bytes, islanger):
        # Calculate the new dimensions based on the target size in bytes
        original_size_bytes = original_size[0] * original_size[1] * 3  # Assuming 24-bit color depth
        if islanger == 'True':
            scale_factor = (target_size_bytes / original_size_bytes) ** -2.43
        if islanger == 'False':
            scale_factor = (target_size_bytes / original_size_bytes) ** 0.200
        new_width = math.ceil(int(original_size[0] * scale_factor))
        new_height = math.ceil(int(original_size[1] * scale_factor))

        return new_width, new_height


if __name__ == "__main__":
    input_image_path = '/home/skye/Pictures/1707899004489_100.PNG'  # input("Enter the path to the input image: ")
    target_size = input("Enter the target output size (MB or KB): ")
    ext = input_image_path[-3:]
    output_image_path = os.path.splitext(input_image_path)[0] + f"_resized.{ext}"

    init = Compress_Size(input_image_path)
    init.resize_image(target_size)
